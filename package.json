{
	"name": "polkadot-js-api-ts-template",
	"version": "0.1.0",
	"description": "A template project to kickstart hacking on top of @polkadot/api, using typescript",
	"main": "./build/index.js",
	"scripts": {
		"run": "./node_modules/.bin/ts-node ./src/index.ts",
		"run:dev": "./node_modules/.bin/nodemon --exec ./node_modules/.bin/ts-node ./src/index.ts",
		"build": "npm run clean && ./node_modules/.bin/tsc --pretty --declaration",
		"build:dev": "./node_modules/.bin/tsc --pretty --declaration --watch",
		"clean": "./node_modules/.bin/rimraf build",
		"update": "./node_modules/.bin/ncu -u && yarn",
		"lint": "eslint . --ext .ts --fix",
		"format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc"
	},
	"author": "@kianenigma",
	"license": "ISC",
	"devDependencies": {
		"@babel/cli": "^7.20.7",
		"@babel/core": "^7.20.7",
		"@babel/preset-typescript": "^7.18.6",
		"@types/node": "^18.11.18",
		"@types/yargs": "^17.0.17",
		"@typescript-eslint/eslint-plugin": "^5.47.1",
		"@typescript-eslint/parser": "^5.47.1",
		"eslint": "^8.30.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"nodemon": "^2.0.20",
		"npm-check-updates": "16.6.2",
		"prettier": "^2.8.1",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"typescript": "4.9.4"
	},
	"dependencies": {
		"@polkadot/api": "^9.14.1",
		"@polkadot/dev": "^0.68.10",
		"yargs": "^17.6.2"
	},
	"resolutions": {
		"@polkadot/api": "file:../api/packages/api",
		"@polkadot/api-augment": "file:../api/packages/api-augment/build",
		"@polkadot/api-base": "file:../api/packages/api-base/build",
		"@polkadot/api-contract": "file:../api/packages/api-contract/build",
		"@polkadot/api-derive": "file:../api/packages/api-derive/build",
		"@polkadot/rpc-augment": "file:../api/packages/rpc-augment/build",
		"@polkadot/rpc-core": "file:../api/packages/rpc-core/build",
		"@polkadot/rpc-provider": "file:../api/packages/rpc-provider/build",
		"@polkadot/typegen": "file:../api/packages/typegen/build",
		"@polkadot/types": "file:../api/packages/types/build",
		"@polkadot/types-augment": "file:../api/packages/types-augment/build",
		"@polkadot/types-codec": "file:../api/packages/types-codec/build",
		"@polkadot/types-create": "file:../api/packages/types-create/build",
		"@polkadot/types-known": "file:../api/packages/types-known/build",
		"@polkadot/types-support": "file:../api/packages/types-support/build"
	}
}
